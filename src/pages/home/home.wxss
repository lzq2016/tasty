/* pages/others/waterfall/waterfall.wxss */

.img_item {
    width: 46%;
    display: inline-block;
    vertical-align: top;
}

.imgWrap {
    animation: fadeShow 1s;
    background-color: #fff;
    margin-bottom: 15rpx;
    border: 1rpx solid #dfdfdf;
}

@-webkit-keyframes fadeShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}
.loading_box {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  background-color: #F2F2F2;
}

.loading_box>view {
  display: inline-block;
}
.loading3 {
  width: 20rpx;
  height: 20rpx;
  background: #f6a623;
  border-radius: 50%;
  margin-left: 15rpx;
}

.loading3_1 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
}

.loading3_2 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 0.5s;
}

.loading3_3 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 1s;
}

@-webkit-keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

@keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}