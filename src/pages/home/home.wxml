<view style='height:88rpx;background-color:#f5f8fa;display: flex;flex-flow: row;justify-content:space-around;align-items:center'>
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="{{'name'}}">
    <view style='background-color:#D2D0D0;width:220rpx;height:55rpx;border-radius:30rpx;text-align:center;'>
      <image src="/images/dizhi.png" style="width:22rpx;height:28rpx;vertical-align:middle;"></image>
      <text style='color:#474646;font-size:24rpx;vertical-align:middle;margin-left:10rpx;'>{{selectCity}}</text>
    </view>
  </picker>
  <navigator url="/pages/search/search" hover-class="none" style='background-color:#EDEDED;width:390rpx;height:55rpx;border-radius:30rpx;text-align:center;'>
    <image src="/images/search.png" style="width:30rpx;height:30rpx;vertical-align:middle;"></image>
    <text style='color:#979797;font-size:24rpx;vertical-align:middle;margin-left:10rpx;'>搜索</text>
  </navigator>
</view>
<view style="display:none">
  <image wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.pic}}" bindload="onImageLoad"></image>
</view>
<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages" style='background-color:#F2F2F2;padding-top:10rpx;'>
  <view style="display: flex;flex-flow: row;justify-content:center">
    <view class="img_item" style='margin-right:15rpx;text-align:center;'>
      <navigator url="/pages/noteDetail/noteDetail" hover-class="none" wx:for="{{col1}}" wx:key="id" style='background-color:#fff;margin-bottom:15rpx;border:1rpx solid #DFDFDF'>
        <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"></image>
        <!-- <text style='font-size:24rpx;font-weight:bold;display:block;margin-top:5rpx;'>MY LAB分子甜品实验室</text> -->
        <text style='font-size:24rpx;font-weight:bold;display:block;margin-top:5rpx;'>{{item.title}}</text>
        <!-- <text style='font-size:24rpx;display:block;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;text-align:left;color:#7C7C7C'>图一忘了是什么了。。。是店员推荐的融化的不慢了</text> -->
        <text style='font-size:24rpx;display:block;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;text-align:left;color:#7C7C7C;height:200rpx;text-overflow:hidden;'>{{item.content}}</text>
        <view style='display: flex;flex-flow: row;justify-content:space-between;align-items:center;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;margin-bottom:5rpx;'>
          <view style='vertical-align:middle;'>
            <view style='width:56rpx;height:56rpx;display:inline-block;border-radius:50%;border:1rpx solid #C5156A;padding:2rpx;vertical-align:middle;'>
              <!-- <image src="/imagesDemo/1.png" style='width:56rpx;height:56rpx;border-radius:50%;'></image> -->
              <image src="{{item.headPortrait}}" style='width:56rpx;height:56rpx;border-radius:50%;'></image>
            </view>
            <!-- <text style='font-size:24rpx;vertical-align:middle;'>一个诚意</text> -->
            <text style='font-size:24rpx;vertical-align:middle;'>{{item.nickname}}</text>
          </view>
          <!-- <text style='font-size:24rpx;vertical-align:middle;color:#ACACAC'>7</text> -->
          <text style='font-size:24rpx;vertical-align:middle;color:#ACACAC'>{{item.count}}</text>
        </view>
      </navigator>
    </view>
    <view class="img_item" style='text-align:center;'>
      <navigator url="/pages/noteDetail/noteDetail" hover-class="none" wx:for="{{col2}}" wx:key="id" style='background-color:#fff;margin-bottom:15rpx;border:1rpx solid #DFDFDF'>
        <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"></image>
        <!-- <text style='font-size:24rpx;font-weight:bold;display:block;margin-top:5rpx;'>MY LAB分子甜品实验室</text> -->
        <text style='font-size:24rpx;font-weight:bold;display:block;margin-top:5rpx;'>{{item.title}}</text>        
        <!-- <text style='font-size:24rpx;display:block;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;text-align:left;color:#7C7C7C'>图一忘了是什么了。。。是店员推荐的融化的不慢了</text> -->
        <text style='font-size:24rpx;display:block;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;text-align:left;color:#7C7C7C'>{{item.content}}</text>
        <view style='display: flex;flex-flow: row;justify-content:space-between;align-items:center;padding-left:20rpx;padding-right:20rpx;margin-top:5rpx;margin-bottom:20rpx;'>
          <view style='vertical-align:middle;'>
            <view style='width:56rpx;height:56rpx;display:inline-block;border-radius:50%;border:1rpx solid #C5156A;padding:2rpx;vertical-align:middle;'>
              <!-- <image src="/imagesDemo/1.png" style='width:56rpx;height:56rpx;border-radius:50%;'></image> -->
              <image src="{{item.headPortrait}}" style='width:56rpx;height:56rpx;border-radius:50%;'></image>              
            </view>
            <!-- <text style='font-size:24rpx;vertical-align:middle;'>一个诚意</text> -->
            <text style='font-size:24rpx;vertical-align:middle;'>{{item.nickname}}</text>            
          </view>
          <!-- <text style='font-size:24rpx;vertical-align:middle;color:#ACACAC'>7</text> -->
          <text style='font-size:24rpx;vertical-align:middle;color:#ACACAC'>{{item.count}}</text>
          
        </view>
      </navigator>
    </view>
  </view>
</scroll-view>
<view class="loading_box" wx:if="loadingShow">
  <view class="loading3 loading3_1"></view>
  <view class="loading3 loading3_2"></view>
  <view class="loading3 loading3_3"></view>
</view>